
<div class="row">
  <div class="col-md-9">
    <%= image_tag(@project.picture_url, width: '100%') if @project.picture.present? %>
    <h3>Comments</h3>
    <% @comments.each do |comment| %>
    <div>
      <strong><%= comment.user_name %></strong>
      <br />
      <p><%= comment.body %></p>
      <% if user_signed_in?  %>
        <p><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' }%> |
        <%= link_to 'Edit', edit_comment_path(comment) %></p>
      <% end %>
    </div>
    <% end %>
    <%= render 'comments/form' %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @project.name %></p>
    <p><b>Description: </b><%= @project.description %></p>
    <p>
      <% if user_signed_in? and current_user.email == "clb.miclairy@gmail.com"%>
        <%= link_to 'Edit', edit_project_path(@project) %> |
        <%= link_to 'Destroy', @project, data: { confirm: 'Are you sure?' }, method: :delete %> |
      <% end %>
      <%= link_to 'Back', projects_path %>
    </p>
  </div>
</div>
